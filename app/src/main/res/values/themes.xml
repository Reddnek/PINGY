<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sgn1</item>
        <item name="colorPrimaryVariant">@color/sgn2</item>
        <item name="colorOnPrimary">@color/text1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sgn2</item>
        <item name="colorSecondaryVariant">@color/sgn3</item>
        <item name="colorOnSecondary">@color/text1</item>
        <!-- System bar properties -->
        <item name="android:statusBarColor">@color/main_bg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Globalizing text colors. -->
        <item name="android:textColor">@color/sgn_shade</item>
        <item name="android:textColorSecondary">@color/text2</item>
        <!-- More theme options -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">default</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:windowBackground">#00ffffff</item>
    </style>

    <!---  -->`
<!--    <item name="android:windowBackground">@drawable/bg_gradient</item>-->
    <style name="Theme.splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenBackground">@color/main1</item>
        <item name="postSplashScreenTheme">@style/Theme.app</item>
    </style>
</resources>